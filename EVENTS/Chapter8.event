          macroASMCSetCharacterDataWord Marty, Leader, Leif

          SET_FLAG $0A
        END2

        _HalvanMartyTalk ; 99/C0BA
          PLAY_SOUND_WORD $00E0
          PAUSE_SKIPPABLE 32
          YIELD

          SET_MUSIC $4C
          YIELD

          DIALOGUE dialogueChapter8HalvanMartyTalk
          YIELD

