          EVENT FlagAlliedDeath, eventMapDeathQuoteDummyEvent
            CMP_WORD wCurrentTurn, 16
            CHECK_NUM_UNITS_GTE Rumaigh, 1
            CMP_UNITSTATE_UNSET Rumaigh, UnitStateRescued
